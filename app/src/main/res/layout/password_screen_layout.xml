<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ly"
        android:background="@drawable/table_border"
        android:orientation="horizontal"
        tools:ignore="UselessParent">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/getpasswordtext"
            android:textColor="@color/Text_colour_grey"
            android:layout_height="match_parent"/>
        <ImageView
            android:layout_width="60dp"
            android:src="@drawable/eye_24"
            android:id="@+id/getpasswordimage"
            android:padding="15dp"
            android:layout_height="match_parent"
            app:tint="#7C7979" />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:text="enter"
        android:backgroundTint="@color/button_gb_blue"
        android:layout_margin="8dp"
        android:outlineProvider="none"

        android:textColor="@color/black"
        android:id="@+id/getpasswordbutton"
        android:layout_height="wrap_content"/>

</LinearLayout>