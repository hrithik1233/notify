<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#FFFFFF"
    android:layout_height="match_parent">
    <TextView
        android:text="Student details"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:id="@+id/title"
        android:gravity="center"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        />
    <GridLayout
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Name of student: "
            android:textColor="#000000"
            />
        <EditText

            android:layout_height="wrap_content"
            android:hint="Name of student (req)"
            android:id="@+id/student_name"
            android:textSize="12sp"
            android:textColorHint="@color/hintcolour"
            android:textColor="#000000"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            />
    </GridLayout>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:columnCount="2"
        android:orientation="horizontal"

        >
        <TextView

            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Department: "
            android:textColor="#000000"
        />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:layout_height="wrap_content"
            android:hint="Name of Department (req)"
            android:id="@+id/department"
            android:textColor="#000000"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            />
    </GridLayout>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Age of student: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:layout_height="wrap_content"
            android:hint="Age of student(opt)"
            android:layout_marginBottom="5dp"
            android:inputType="number"
            android:id="@+id/age"
            android:maxLength="3"
            android:textSize="12sp"
            android:layout_weight="1"
            android:textColor="#000000"
            android:layout_width="match_parent"
            />
    </GridLayout>


    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Student Gender: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:layout_height="wrap_content"
            android:hint="Student Gender ( M/F req)"
            android:layout_marginBottom="5dp"
            android:id="@+id/student_gender"
            android:textColor="#000000"
            android:maxLength="1"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            />
    </GridLayout>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Student contact no: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:layout_height="wrap_content"
            android:hint="Student mobile no(opt)"
            android:layout_marginBottom="5dp"
            android:id="@+id/student_mobil"
            android:maxLength="10"
            android:textColor="#000000"
            android:inputType="number"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            />
    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Parent Name: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:layout_height="wrap_content"
            android:hint="Parent name(Guardian)"
            android:layout_marginBottom="5dp"
            android:id="@+id/parent_name"
            android:textColor="#000000"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_width="match_parent"
            />
    </GridLayout>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Parent Contact no: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Parent mobile no (opt)"
            android:inputType="number"
            android:maxLength="10"
            android:layout_marginBottom="5dp"
            android:id="@+id/parent_number"
            android:textSize="12sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            />
    </GridLayout>

    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Address: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Address (opt)"
            android:layout_marginBottom="5dp"
            android:id="@+id/address"
            android:layout_columnWeight="1"
            android:layout_width="match_parent"
            />
    </GridLayout>
    <GridLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:text="Student Aadhar no: "
            android:textColor="#000000"
            />
        <EditText
            android:textColorHint="@color/hintcolour"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:hint="Aadhar (opt)"
            android:layout_marginBottom="5dp"
            android:id="@+id/Aadhar"
            android:maxLength="12"
            android:inputType="number"
            android:layout_columnWeight="1"
            android:layout_width="match_parent"
            />
    </GridLayout>

    <GridLayout
        android:layout_height="30dp"
        android:layout_width="match_parent"
        android:columnCount="2"

        android:orientation="horizontal">
        <TextView
            android:clickable="true"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/cancel1"
            android:padding="5dp"
            android:background="@drawable/border"
            android:text="CANCEL"
            android:textColor="#000000"
            />
        <TextView
            android:clickable="true"
            android:padding="5dp"
            android:background="@drawable/border"
            android:id="@+id/create1"
            android:layout_columnWeight="1"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="CREATE"
            android:textColor="#000000"
            />
    </GridLayout>



</LinearLayout>