<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mian_layout_anim_login"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:background="@drawable/animation_background"
    android:layout_height="match_parent"
    android:paddingTop="200dp"
    tools:context=".LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20dp"

        android:fontFamily="sans-serif-black"
        android:text="Log in"
        android:textColor="@color/white"

        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/login_password"
            android:layout_width="250dp"
            android:textColorHint="#5A5858"
            android:padding="8dp"
            android:background="@drawable/gradient_border"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/lock_24"
            android:maxLength="16"
            android:ems="10"
            android:hint="password" />

        <EditText
            android:id="@+id/login_email"
            android:layout_width="250dp"
            android:textColorHint="#5A5858"
            android:padding="8dp"
            android:background="@drawable/gradient_border"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginBottom="2dp"
            android:drawableLeft="@drawable/email_24"
            android:maxLength="60"
            android:ems="10"
            android:hint="email:"
            android:inputType="textEmailAddress"
            />

        <TextView
            android:id="@+id/forgot_password_login_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:onClick="forgotpassword"
            android:layout_marginVertical="10dp"
            android:text="forgot password ?" />

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:onClick="login"
            android:background="@drawable/gradient_bcakground_for_login"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="login" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:onClick="signUp"
            android:background="@drawable/gradient_bcakground_for_login"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="sign up" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>