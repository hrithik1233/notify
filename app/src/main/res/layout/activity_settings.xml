<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"

  android:paddingTop="60dp"
    android:paddingLeft="30dp"
    android:layout_height="match_parent"
    tools:context=".MenuSettings">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/allerta"
        android:text="Settings"
        android:textColor="#272727"
        android:textSize="30sp" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:layout_width="match_parent"
          android:orientation="vertical"
          android:layout_height="match_parent">
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:backgroundTint="@color/white"
              app:cardCornerRadius="8dp"
              android:elevation="20dp"
              android:layout_margin="2dp"
              android:layout_height="wrap_content">

          <com.google.android.material.button.MaterialButton
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:outlineProvider="none"
              android:onClick="setPassword"
              android:id="@+id/setpassword_btn"
              android:textColor="@color/Text_colour_grey"
              android:textAlignment="textStart"
              android:drawableLeft="@drawable/key_24"
              app:rippleColor="@color/touch_color"
              android:text="set password" />
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_margin="2dp"
              android:backgroundTint="@color/white"
              app:cardCornerRadius="8dp"
              android:elevation="20dp"
              android:layout_height="wrap_content">
          <com.google.android.material.button.MaterialButton
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:outlineProvider="none"
              android:id="@+id/offline_mode_btn"
              app:rippleColor="@color/touch_color"
              android:textColor="@color/Text_colour_grey"
              app:helperText="Click me for action"
              android:onClick="offlineMode"
              android:textAlignment="textStart"
              android:drawableLeft="@drawable/cloud_off_24"
              android:text="offline mode" />
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:backgroundTint="@color/white"
              app:cardCornerRadius="8dp"
              android:elevation="20dp"
              android:layout_margin="2dp"
              android:layout_height="wrap_content">

          <com.google.android.material.button.MaterialButton
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:outlineProvider="none"
              android:onClick="onSingleMode"
              android:textColor="@color/Text_colour_grey"
              android:textAlignment="textStart"
              android:id="@+id/single_mode_btn"
              app:rippleColor="@color/touch_color"
              android:drawableLeft="@drawable/person_disabled_24"
              android:text="secure mode" />
          </androidx.cardview.widget.CardView>
          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:backgroundTint="@color/white"
              app:cardCornerRadius="8dp"
              android:elevation="20dp"
              android:layout_margin="2dp"
              android:layout_height="wrap_content">

          <com.google.android.material.button.MaterialButton
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:outlineProvider="none"
              android:textColor="@color/Text_colour_grey"
              android:textAlignment="textStart"
              app:rippleColor="@color/touch_color"
              android:drawableLeft="@drawable/reset_24"
              android:onClick="resetAllData"
              android:text="reset all data" />
          </androidx.cardview.widget.CardView>

      </LinearLayout>
    </ScrollView>

</LinearLayout>